<aura:component controller="HMQ_HeadlinesService" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="title" type="String" default="Headlines" access="global"/>
    <aura:attribute name="icon" type="String" default="standard:account" access="global"/>
    <aura:attribute name="footer" type="String" default="Powered by Salesforce" access="global"/>
    <aura:attribute name="height" type="String" default="400px" access="global"/>
    <aura:attribute name="width" type="String" default="100%" access="global"/>
    <aura:attribute name="fontsize" type="String" default="16px" access="global"/>
    <aura:attribute name="textColor" type="String" default="black" access="global"/>
            <aura:attribute name="headLines" type="String" access="global"/>
            <aura:attribute name="direction" type="String" default="scroll_right2left" access="global"/>
        <aura:attribute name="speed" type="String" default="25s" access="global"/>
        <aura:attribute name="deLimiter" type="String" default="*****" access="global"/>

	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

  <lightning:card  title="{!v.title}" iconName="{!v.icon}" footer="{!v.footer}">
		<div  style="{!'height:'+v.height+';width:'+v.width+';overflow: hidden;position: relative;'}">
<h3  class="{!v.direction}" style="{!'font-size:'+v.fontsize+';color:'+v.textColor+';animation-duration:'+v.speed+';-moz-animation-duration:'+v.speed+';-webkit-animation-duration:'+v.speed+';display: inline;'}" ><aura:unescapedHtml value="{!v.headLines}" /></h3>		</div>
  </lightning:card> 
</aura:component>